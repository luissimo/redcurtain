<h1 class="text-center">Mijn facturen</h1><hr/>

<div class="row">
  <div class="col-md-12">
    <%= link_to ' Nieuwe factuur toevoegen', new_invoice_path, class: 'btn btn-block btn-primary btn-lg' %>
    <div class="panel panel-white">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th>Factuurnummer</th>
              <th>Voor</th>
              <th>Datum</th>
              <th>Te betalen voor</th>
              <th>Subtotaal</th>
              <th>BTW</th>
              <th>Totaal</th>
            </tr>
            </thead>

            <tbody>
            <% @invoices.each do |invoice| %>
                <tr>
                  <td><%= invoice.number %></td>
                  <td><%= invoice.relation.company_name %></td>
                  <td><%= invoice.date.strftime('%d-%m-%Y') %></td>
                  <td><%= invoice.duedate.strftime('%d-%m-%Y') %></td>
                  <td><%= invoice.currency %><%= '%.2f' % invoice.subtotal %></td>
                  <td><%= invoice.currency %><%= '%.2f' % invoice.btwtotal %></td>
                  <td><%= invoice.currency %><%= '%.2f' % invoice.total %></td>
                  <td><%= link_to 'Bekijken', invoice, class: 'btn btn-block btn-primary btn-info' %></td>
                  <td><%= link_to 'Aanpassen', edit_invoice_path(invoice), data: { confirm: 'Weet u zeker dat u een factuur wilt aanpassen?' },
                                class: 'btn btn-block btn-primary btn-success' %></td>
                   <td> <%= link_to 'x', invoice,method: :delete, data: { confirm: 'Weet u het zeker?' },
                                class: 'btn btn-block btn-primary btn-danger' %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
