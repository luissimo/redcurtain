<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Description</th>
      <th>Unitprice</th>
      <th>Total</th>
      <th>Btw</th>
      <th>Invoice</th>
      <th>User</th>
      <th>Quote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.quantity %></td>
        <td><%= item.description %></td>
        <td><%= item.unitprice %></td>
        <td><%= item.total %></td>
        <td><%= item.btw %></td>
        <td><%= item.invoice_id %></td>
        <td><%= item.user_id %></td>
        <td><%= item.quote_id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

