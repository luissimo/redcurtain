<p id="notice"><%= notice %></p>

<h1>Quotes</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Currency</th>
      <th>Date</th>
      <th>Duedate</th>
      <th>Btwtotal</th>
      <th>Subtotal</th>
      <th>Total</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.number %></td>
        <td><%= quote.currency %></td>
        <td><%= quote.date %></td>
        <td><%= quote.duedate %></td>
        <td><%= quote.btwtotal %></td>
        <td><%= quote.subtotal %></td>
        <td><%= quote.total %></td>
        <td><%= quote.user_id %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>
