<h1 class="text-center">Mijn offertes</h1><hr/>

<div class="row">
  <div class="col-md-12">
    <%= link_to ' Nieuwe offerte toevoegen', new_quote_path, class: 'btn btn-block btn-primary btn-lg' %>
    <div class="panel panel-white">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th>Factuurnummer</th>
              <th>Voor</th>
              <th>Datum</th>
              <th>Te betalen voor</th>
              <th>Subtotaal</th>
              <th>BTW</th>
              <th>Totaal</th>
            </tr>
            </thead>

            <tbody>
            <% @quotes.each do |quote| %>
                <tr>
                  <td><%= quote.number %></td>
                  <td><%= quote.relation.company_name %></td>
                  <td><%= quote.date.strftime('%d-%m-%Y') %></td>
                  <td><%= quote.duedate.strftime('%d-%m-%Y') %></td>
                  <td><%= quote.currency %><%= '%.2f' % quote.subtotal %></td>
                  <td><%= quote.currency %><%= '%.2f' % quote.btwtotal %></td>
                  <td><%= quote.currency %><%= '%.2f' % quote.total %></td>
                  <td><%= link_to 'Bekijken', quote, class: 'btn btn-block btn-primary btn-info' %></td>
                  <td><%= link_to 'Aanpassen', edit_quote_path(quote), data: { confirm: 'Weet u zeker dat u een factuur wilt aanpassen?' },
                                  class: 'btn btn-block btn-primary btn-success' %></td>
                  <td> <%= link_to 'x', quote ,method: :delete, data: { confirm: 'Weet u het zeker?' } %></td>
                  <td> <%= link_to 'x', quote, method: :delete, data: { confirm: 'Weet u het zeker?' },
                                   class: 'btn btn-block btn-primary btn-danger' %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
