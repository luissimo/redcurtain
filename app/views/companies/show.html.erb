<%- model_class = Company -%>
<hr/>
<div class="col-md-12">
  <h1 class="text-center"><strong><%=t '.title', :default => @company.company_name %></strong></h1>
</div>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-white panel-warning">
    <div class="panel-body text-center">
      <strong><code><%= model_class.human_attribute_name('Bedrijfsnaam') %>:</code>  <%= @company.company_name %></strong><hr/>
      <strong><code><%= model_class.human_attribute_name('BTW nummer') %>:</code>  <%= @company.btw_number %></strong><hr/>
      <strong><code><%= model_class.human_attribute_name('Iban') %>:</code>  <%= @company.iban_number %></strong><hr/>
      <%= link_to t('.back', :default => t("helpers.links.Terug")),
                  companies_path, :class => 'btn btn-primary btn-lg btn-info'  %>
      <%= link_to t('.edit', :default => t("helpers.links.Aanpassen")),
                  edit_company_path(@company), :class => 'btn btn-primary btn-lg btn-success' %>
      <%= link_to t('.destroy', :default => t("helpers.links.Verwijderen")),
                  company_path(@company),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.bevestigen", :default => 'Weet u het zeker?')) },
                  :class => 'btn btn-primary btn-lg btn-danger' %>
    </div>
  </div>
</div>


<div class="col-md-12 block-center">

</div>