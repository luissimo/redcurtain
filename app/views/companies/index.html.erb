<%- model_class = Company -%>
<h1 class="text-center">Mijn sjablonen</h1><hr/>
<%= link_to t('.new', :default => ' Nieuwe sjabloon toevoegen'),
            new_company_path,
            :class => 'btn btn-block btn-primary btn-lg' %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-white">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th><%= model_class.human_attribute_name("#") %></th>
              <th><%= model_class.human_attribute_name(:Bedrijfsnaam) %></th>
              <th><%= model_class.human_attribute_name(:IBAN) %></th>
              <th><%= model_class.human_attribute_name(:BTW) %></th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% @companies.each do |company| %>
                <tr>
                  <td><%= link_to company.id, company_path(company) %></td>
                  <td><%= company.company_name %></td>
                  <td><%= company.iban_number %></td>
                  <td><%= company.btw_number %></td>
                  <td>
                    <%= link_to 'Bekijken',
                                company_path(company), class: 'btn btn-block btn-primary btn-info' %></td>
                   <td> <%= link_to 'Aanpassen',
                                edit_company_path(company), :class => 'btn btn-block btn-primary btn-success' %></td>
                   <td> <%= link_to t('.destroy', :default => t("helpers.links.x")),
                                company_path(company),
                                :method => :delete,
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.bevestigen", :default => 'Weet u het zeker?')) },
                                :class => 'btn btn-block btn-primary btn-danger' %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

