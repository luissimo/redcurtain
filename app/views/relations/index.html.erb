<h1 class="text-center">Mijn relaties</h1><hr/>

<div class="row">
  <div class="col-md-12">
    <%= link_to ' Nieuwe relatie toevoegen', new_relation_path, class: 'btn btn-block btn-primary btn-lg' %>
    <div class="panel panel-white">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th>#</th>
              <th>Bedrijfsnaam</th>
              <th>Adres</th>
              <th>Postcode & stad</th>
              <th>Email</th>
              <th>Telefoon</th>
              <th>Btw nummer</th>
              <th>IBAN</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @relations.each do |relation| %>
                <tr>
                  <td><%= link_to relation.id, relation_path(relation) %></td>
                  <td><%= relation.company_name %></td>
                  <td><%= relation.address_line_1 %></td>
                  <td><%= relation.zip_code %></td>
                  <td><%= relation.email_adress %></td>
                  <td><%= relation.phone_number %></td>
                  <td><%= relation.btw_number %></td>
                  <td><%= relation.iban_number %></td>
                  <td><%= link_to 'Bekijken', relation, class: 'btn btn-block btn-primary btn-info' %></td>
                  <td><%= link_to 'Aanpassen', edit_relation_path(relation),
                                  class: 'btn btn-block btn-primary btn-success' %></td>
                  <td><%= link_to 'x', relation, method: :delete, data: { confirm: 'Weet u het zeker?' },
                                  class: 'btn btn-block btn-primary btn-danger' %></td>

                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
