<h1>Relations</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>Zip code</th>
      <th>Country name</th>
      <th>Email adress</th>
      <th>Phone number</th>
      <th>Kvk number</th>
      <th>Btw number</th>
      <th>Iban number</th>
      <th>Bic number</th>
      <th>Bank holder name</th>
      <th>Invoice</th>
      <th>User</th>
      <th>Quote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relations.each do |relation| %>
      <tr>
        <td><%= relation.company_name %></td>
        <td><%= relation.first_name %></td>
        <td><%= relation.last_name %></td>
        <td><%= relation.address_line_1 %></td>
        <td><%= relation.address_line_2 %></td>
        <td><%= relation.zip_code %></td>
        <td><%= relation.country_name %></td>
        <td><%= relation.email_adress %></td>
        <td><%= relation.phone_number %></td>
        <td><%= relation.kvk_number %></td>
        <td><%= relation.btw_number %></td>
        <td><%= relation.iban_number %></td>
        <td><%= relation.bic_number %></td>
        <td><%= relation.bank_holder_name %></td>
        <td><%= relation.invoice_id %></td>
        <td><%= relation.user_id %></td>
        <td><%= relation.quote_id %></td>
        <td><%= link_to 'Show', relation %></td>
        <td><%= link_to 'Edit', edit_relation_path(relation) %></td>
        <td><%= link_to 'Destroy', relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

