<h4 class="text-muted text-center m-t-0"><b>Registreren</b></h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group-lg">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group-lg">
    <%= f.label 'Wachtwoord' %>
    <% if @minimum_password_length %>
    <em>(minimaal <%= @minimum_password_length %> karakters)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="form-group-lg">
    <%= f.label "Wachtwoord bevestigen" %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
  </div><br/>

  <div class="actions">
    <%= f.submit "Registreren", class: "btn btn-primary btn-block btn-lg" %>
  </div>

<% end %>

<div class="form-group m-t-30 m-b-0">
  <div class="col-sm-12">
    <%- if controller_name != 'sessions' %>
        <%= link_to "Heeft u al een account? Log in", new_session_path(resource_name) %><br />
    <% end -%>
  </div>
</div>
