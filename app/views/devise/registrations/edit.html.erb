<h1 class="text-center">Gegevens aanpassen</h1>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group-lg">
            <%= f.label :email %><br />
            <%= f.email_field :email, class:'form-control', autofocus: true %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group-lg">
            <%= f.label 'Nieuwe wachtwoord' %><i> (minimaal <%= @minimum_password_length %> karakters)</i> <br />
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
          </div>


          <div class="form-group-lg">
            <%= f.label "Nieuwe wachtwoord bevestigen" %><br />
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>

          <div class="form-group-lg">
            <%= f.label 'Huidige wachtwoord' %><br />
            <%= f.password_field :current_password, class: 'form-control', autocomplete: "off" %>
          </div>

          <div class="actions"><br/>
            <%= f.submit "Aanpassen", class: 'btn btn-primary btn-success btn-block' %>
          </div>
      <% end %>
      <hr/>

      <div class="row">
        <h4 class="text-center">Huidige accountstatus wijzigen</h4><br/>

        <% if current_user.subscribed? %>
        <div class="col-md-6">
          <div>
            <%= button_to "Premium stopzetten", registration_path(resource_name), class: 'btn btn-sm btn-info btn-block', data: { confirm: "Weet u het zeker?" }, method: :delete %>
            <hr>
          </div>
        </div>
        <div class="col-md-6">
          <div>
            <%= button_to "Account verwijderen", registration_path(resource_name), class: 'btn btn-sm btn-danger btn-block', data: { confirm: "Weet u het zeker? Al uw gegevens gaan definitief verloren." }, method: :delete %><span class="small"> (<strong>Let op!</strong> Als u uw account verwijdert gaan alle ingevulde gegevens definitief verloren.)</span>
            <hr>
          </div>
        </div>
        <% else %>
        <div class="col-md-8">
          <div>
            <%= link_to "Premium worden", new_subscriber_path, class: 'btn btn-sm btn-success btn-block' %>
            <hr>
          </div>
        </div>
        <div class="col-md-4">
          <div>
            <%= button_to "Account verwijderen", registration_path(resource_name), class: 'btn btn-sm btn-danger btn-block', data: { confirm: "Weet u het zeker? Al uw gegevens gaan definitief verloren." }, method: :delete %><span class="small"> (<strong>Let op!</strong> Als u uw account verwijdert gaan alle ingevulde gegevens definitief verloren.)</span>
            <hr>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>