<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'form-horizontal m-t-20'}) do |f| %>

  <div class="form-group">
    <div class="col-xs-12">
      <%= f.email_field :email, autofocus: true, placeholder: 'Emailadres', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12">
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Wachtwoord', class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="col-xs-12">
          <div class="checkbox checkbox-primary">
            <%= f.check_box :remember_me %>
            <%= f.label 'Onthoud mij' %>
          </div>
        </div>
      </div>
  <% end -%>

  <div class="form-group text-center m-t-40">
    <div class="col-xs-12">
      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-primary btn-block btn-lg' %>
      </div>
    </div>
  </div>

    <div class="form-group m-t-30 m-b-0">
      <div class="col-sm-7">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <i class="fa fa-lock m-r-5"></i><%= link_to "Wachtwoord vergeten?", new_password_path(resource_name) %><br />
        <% end -%>
      </div>
      <div class="col-sm-5 text-right">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Account aanmaken", new_registration_path(resource_name) %><br />
        <% end -%>
      </div><br/><hr/>
      <div class="col-sm-12 text-center text-small">
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
            <%= link_to "Geen bevestigingsmail ontvangen?", new_confirmation_path(resource_name) %><br />
        <% end -%>
      </div>
    </div>
<% end %>

